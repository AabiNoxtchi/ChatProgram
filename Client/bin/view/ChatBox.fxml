<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="chatBox" prefHeight="351.0" prefWidth="400.0" style="-fx-background-color: #6495ed;" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <ListView fx:id="listviewChat" prefHeight="305.0" prefWidth="390.0">
        </ListView>
        <HBox prefHeight="40.0" prefWidth="400.0">
            <children>
                <TextField fx:id="txtFieldMsg" onKeyPressed="#txtFieldOnKeyPressed" prefHeight="43.0" prefWidth="366.0" promptText="Type a Message ">
                   
                </TextField>
            <ImageView fitHeight="43.0" fitWidth="41.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#iconAddAttachmentAction">
               <image>
                  <Image url="@/resources/clips.png" />
               </image>
            </ImageView>
           
               
            </children>
        </HBox>
    </children>
</VBox>
